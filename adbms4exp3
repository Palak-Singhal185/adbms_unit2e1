DROP TABLE IF EXISTS StudentEnrollments;
CREATE TABLE StudentEnrollments (
    student_id INT PRIMARY KEY,
    student_name VARCHAR(100),
    course_id VARCHAR(10),
    enrollment_date DATE
);

INSERT INTO StudentEnrollments VALUES
(1, 'Ashish', 'CSE101', '2024-06-01'),
(2, 'Smaran', 'CSE102', '2024-06-01'),
(3, 'Vaibhav', 'CSE103', '2024-06-01');

START TRANSACTION;

UPDATE StudentEnrollments
SET enrollment_date = '2024-06-15'
WHERE student_id = 1;

UPDATE StudentEnrollments
SET enrollment_date = '2024-06-20'
WHERE student_id = 2;

START TRANSACTION;

UPDATE StudentEnrollments
SET enrollment_date = '2024-06-18'
WHERE student_id = 2;

UPDATE StudentEnrollments
SET enrollment_date = '2024-06-25'
WHERE student_id = 1;

select * from StudentEnrollments;

DROP TABLE IF EXISTS StudentEnrollments;
CREATE TABLE StudentEnrollments (
    student_id INT PRIMARY KEY,
    student_name VARCHAR(100),
    course_id VARCHAR(10),
    enrollment_date DATE
);

INSERT INTO StudentEnrollments VALUES
(1, 'Ashish', 'CSE101', '2024-06-01');

START TRANSACTION;

SELECT enrollment_date
FROM StudentEnrollments
WHERE student_id = 1;

START TRANSACTION;

UPDATE StudentEnrollments
SET enrollment_date = '2024-07-10'
WHERE student_id = 1;

COMMIT;

SELECT enrollment_date
FROM StudentEnrollments
WHERE student_id = 1;

COMMIT;

SELECT enrollment_date FROM StudentEnrollments WHERE student_id = 1;

DROP TABLE IF EXISTS StudentEnrollments;
CREATE TABLE StudentEnrollments (
    student_id INT PRIMARY KEY,
    student_name VARCHAR(100),
    course_id VARCHAR(10),
    enrollment_date DATE
);

INSERT INTO StudentEnrollments VALUES
(1, 'Ashish', 'CSE101', '2024-06-01');

START TRANSACTION;
SELECT * FROM StudentEnrollments
WHERE student_id = 1
FOR UPDATE;   

SELECT * FROM StudentEnrollments
WHERE student_id = 1;

COMMIT;

START TRANSACTION;
SELECT * FROM StudentEnrollments
WHERE student_id = 1;

START TRANSACTION;
UPDATE StudentEnrollments
SET enrollment_date = '2024-07-10'
WHERE student_id = 1;
COMMIT;

SELECT * FROM StudentEnrollments
WHERE student_id = 1;

COMMIT;

-- After Session 1 commits:
SELECT * FROM StudentEnrollments WHERE student_id = 1;
-- Output: 2024-07-10
